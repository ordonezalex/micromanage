<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            tools:context="com.remindyou.remindyou.CreateReminderFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/show_contact_list_dialog_button"
            android:text="@string/show_contact_list_dialog_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/reminder_content_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:layout_gravity="bottom"
            android:lines="5"
            android:background="@color/accent_material_light"
            android:hint="@string/reminder_content_hint"/>
    </LinearLayout>
</ScrollView>

